.btn {
    background: none;
    line-height: 85rpx;
    border-radius: 10rpx;
}

.btn::after {
    border: none;
}

.btn-default {
    background-color: #41b049;
    color: white;
}

.btn-danger {
    background-color: #fb595b;
    color: white;
}

.btn-small {
    width: 210rpx;
    height: 57rpx;
    border-radius: 57rpx;
    line-height: 57rpx;
    font-size: 28rpx;
}

.btn-block {
    width: 700rpx;
    margin: auto 25rpx;
}

.button-hover,
.navigator-hover {
    opacity: 0.85;
}

page {
    height: 100%;
}

view {
    box-sizing: border-box;
}

.container {
    font-size: 28rpx;
}

.box-shadow {
    box-shadow: 0 0 3px 0 rgba(183, 183, 183, 0.8);
    border-radius: 10rpx;
    overflow: hidden;
}

.box-shadow {
    background: white;
    border-radius: unset;
}

.item {
    padding: 25rpx;
    width: 750rpx;
    margin-bottom: 30rpx;
}

.item-top {
    height: 62rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-shop {
    width: 520rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.item-shop-name {
    max-width: 490rpx;
    font-weight: bold;
    font-size: 30rpx;
}

.angle {
    position: unset;
}

.item-status {
    color: #82828282;
}

.item-time {
    width: 100%;
    height: 55rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color: #82828282;
}

.item-good-wrapper {
    width: 100%;
    height: 125rpx;
}

.item-good {
    height: 125rpx;
    width: 520rpx;
    float: left;
}

.item-thumb_image {
    float: left;
    margin-right: 20rpx;
    position: relative;
}

.item-thumb_image image {
    overflow: hidden;
    border-radius: 10rpx;
}

.point {
    font-size: 22rpx;
    padding: 5rpx;
    height: 40rpx;
    min-width: 40rpx;
    line-height: 30rpx;
    border-radius: 40rpx;
    background: #f85537;
    color: white;
    position: absolute;
    top: -15rpx;
    right: -15rpx;
    text-align: center;
    box-sizing: border-box;
}

.item-thumb_image_ {
    float: left;
    width: 80rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.item-price {
    float: right;
}

.item-operate {
    margin-top: 25rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.btn-small {
    margin: unset;
}

.text-danger {
    color: #ff5546;
    font-weight: bold;
}

.btn {
    margin-left: 25rpx;
}

.no-data {
    color: #666666;
}