/* pages/index/cpxq.wxss */
.cptu{
	margin-bottom: 10rpx;
}
.cpxq{
 padding-bottom: 108rpx;
}
.swiper {
	height: 775rpx;
	width: 100%;
}
.swiper .item {
	width: 100%;
	height: 100%;
}
.swiper .item image {
	width: 100%;
	height: 100%;
	display: block;
}
.banner {
	position: relative;
}
.banner .item-num {
	z-index: 9;
	position: absolute;
	bottom: 20rpx;
	right: 20rpx;
	background: rgba(0, 0, 0, 0.5);
	padding: 0 22rpx;
	height: 40rpx;
	line-height: 40rpx;
	border-radius: 20rpx;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.75);
}
.cpxq .cpnr{
	background: #fff;
 padding: 60rpx 40rpx 25rpx;
 border-bottom: 20rpx solid #f4f4f4;
 position: relative;
}
.cpxq .cpnr text{
	display: block;
}
.cpxq .cpnr .bt{
	font-size: 30rpx;
	line-height: 40rpx;
	color: #333;
	margin-bottom: 35rpx;
}
.cpxq .cpnr .jg{
	font-size: 48rpx;
	line-height: 58rpx;
	color: #ff0000;
	margin-bottom: 20rpx;
}
.cpxq .cpnr .yj{
	font-size: 30rpx;
	line-height: 40rpx;
	color: #999;
	text-decoration: line-through;
}
.cpxq .cpnr .sc{
 position: absolute;
 right: 45rpx;
 bottom: 35rpx;
}
.cpxq .cpnr .sc image{
 width: 51rpx;
 height: 47rpx;
 margin-bottom: 15rpx;
}
.cpxq .cpnr .sc text{
 display: block;
 font-size: 20rpx;
 line-height: 30rpx;
 color: #999;
}
.cpxq .cptu .bt{
 text-align: center;
 padding: 40rpx 0 25rpx;
}
.cpxq .cptu .bt image{
	width: 344rpx;
	height: 32rpx;
}
.cpxq .cptu .nr{
 width: 100%;
}
.cpxq .cptu .nr image{
 width: 100%;
	display: block;
}
.foot{
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: space-between;
	position: fixed;
	width: 100%;
	bottom: 0;
	left: 0;
	background: #fff;
}
.foot view{
 width: 50%;
}
.foot .jrgwc{
 display: flex;
 flex-wrap: wrap;
 align-items: center;
 justify-content: center;
}
.foot .jrgwc image{
 width: 55rpx;
 height: 52rpx;
 margin-right: 24rpx;
}
.foot .jrgwc text{
 font-size: 30rpx;
 line-height: 108rpx;
 color: #fa292f;
}
.foot .ljgm{
 background: #fa292f;
 font-size: 30rpx;
 line-height: 108rpx;
 color: #fff;
 text-align: center;
}