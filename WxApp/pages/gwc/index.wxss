.btn {
    background: none;
    line-height: 85rpx;
    border-radius: 10rpx;
}

.btn::after {
    border: none;
}

.btn-default {
    background-color: #f85537;
    color: white;
}

.btn-danger {
    background-color: #ff5546;
    color: white;
}

.btn-small {
    width: 350rpx;
